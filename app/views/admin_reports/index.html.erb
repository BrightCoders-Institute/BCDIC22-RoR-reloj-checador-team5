<a href="<%= admin_index_path %>">
  <button class="back">Back</button>
</a>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<div class='main__container'>

  <div>
    <h1 class='title'>Reports</h1>
  </div>

  <div class="main__content">
      <%= javascript_include_tag 'admin_reports_charts' %>
      <button id='btn-attendance' class='btn' >Attendance</button>
      <button id='btn-average' class='btn' >Average</button>
      <button id='btn-absence' class='btn' >Absence</button>

      <%= form_with url: admin_reports_url, method: :get do | form | %>
      <div class='reports'>
        <% form.hidden_field name:'authenticity_token', value:form_authenticity_token %>
      </div>

      <label>Choose a company</label>
      <%= form.collection_select :company_id, Company.all, :id, :name%>
      <%= form.submit 'Search' %>

    <% end %>
    <%= render 'reports' %>
  </div>
</div>

