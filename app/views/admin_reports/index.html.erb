<a href="<%= admin_index_path %>" class="a">
  <button class="back">Back</button>
</a>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<div class='main__container'>

  <div>
    <h1 class='title'>Reports</h1>
  </div>

  <div class="main__content">
    <%= form_with url: admin_reports_path, method: :post do |form| %>
      <div class='reports'>
        <%= javascript_include_tag 'admin_reports_charts' %>
        <%= form.button 'Attendance', type:'radio', name:'report', value:'attendance', title:'Attendance by day for employees', id:'btn-attendance', class:'btn' %>
        <%= form.button 'Average', type:'radio', name:'report', value:'average', title:'Average time employees checked in/out by month', id:'btn-average', class:'btn' %>
        <%= form.button 'Absence', type:'radio', name:'report', value:'absence', title:'Absence report by month', id:'btn-absence', class:'btn' %>
      </div>

      <label>Choose a company</label>
      <select name="name">
        <%= @companies.each do |company| %>
          <option value="<%= company.name %>"><%= company.name %></option>
        <% end %>
      </select>
    <% end %>

  <%= render 'reports' %>
  </div>
</div>
