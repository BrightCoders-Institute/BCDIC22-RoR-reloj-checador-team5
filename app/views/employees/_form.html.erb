<div class="content">
	<%=  bootstrap_form_for (@employee) do |form| %>

		<% @employee.errors.full_messages.each do |error| %>
			<div>
				<%= error %>
			</div>
		<% end %>

		<div>
			<select name="name">
				<% @companies.each do | company | %>
					<option value="<% company %>"><% company %></option>
				<% end %>
			</select>
		</div>

		<div>
			<%= form.text_field :email %>
		</div>

		<div>
			<%= form.text_field :name %>
		</div>

		<div>
			<%= form.text_field :position %>
		</div>

		<div>
			<%= form.text_field :employee %>
		</div>

		<div>
			<%= form.text_field :number_private %>
		</div>

		<%= form.submit %>
		<a href="<%= employees_path %>"><button>Cancel</button></a>
	<% end %>
</div>
