<a href="<%= root_path %>">
  <button class="back button">Back</button>
</a>
<div>
  <h1 class="login__title">Admin</h1>
</div>
<div class="container login__main__container">
  <div class="login__container">
    <%= bootstrap_form_tag  url: login_index_path, method: :post do |form| %>
      <%= form.password_field :password, placeholder:"Admin password", class:"input login__label" %>

      <%= form.submit "Log in", class:"button login__button" %>
    <% end %>
  </div>
</div>

